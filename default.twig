
{% extends "layout.twig" %}

{% block content %}
<div class="bk-pt-default">
    <header class="bk-header clearfix">
          <div class="headerwrapper">
            <div class="logo-container">
                {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
                {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
            </div>
            <div class="textwidget">
                {{widget('profile', 'headercolumn1profilePhone', { 'profileType':'phone', 'phone':'profile'})|raw}} 
            </div>
           </div>
      </header>

    <div class="pattern">
    </div>
    
    <div class="navbar clearfix">
        <div class="left">
            {{widget('extendednavigation', 'navigationheader', {"align":"left"})|raw}}
        </div>
    </div>
    
    <div class="page-wrap">
        <div class="headerwrapper">
            <div class="mainzone headerwrapper">
                {{zone('main')|raw}}
            </div>
        </div>
    </div>
    
    <div class="pattern">
    </div>
    
    <footer class="bk-footer clearfix">
          <div class="headerwrapper">
              <div class="left">
                  {{widget('companyname', 'thisunqiuewidgetname', {"business": "profile"})|raw}}
              </div>
              <div class="right">
                  {{widget('profile', 'headercolumn1copyright', { 'profileType' : 'copyright' })|raw}}
              </div>
          </div>
    </footer>
</div>

{% endblock %}
